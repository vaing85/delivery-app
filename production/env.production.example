# Production Environment Variables
# Copy this file to .env and update with your production values

# Database Configuration
POSTGRES_DB=delivery_app_prod
POSTGRES_USER=delivery_user
POSTGRES_PASSWORD=your-super-secure-postgres-password-change-this

# Redis Configuration
REDIS_PASSWORD=your-super-secure-redis-password-change-this

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production

# Application Configuration
NODE_ENV=production
PORT=5000
CORS_ORIGIN=https://deliveryapp.com
FRONTEND_URL=https://deliveryapp.com

# Frontend Configuration
VITE_API_URL=https://api.deliveryapp.com

# SSL Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Monitoring Configuration
PROMETHEUS_URL=http://prometheus:9090
GRAFANA_URL=http://grafana:3000

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_MAX_REQUESTS=10

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=/app/logs/app.log
